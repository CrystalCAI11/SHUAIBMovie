
.movie {
  display: block;
  padding: 30rpx;
}

.movie-image {
  margin: 30rpx 30rpx 0;
  border-radius: 10rpx;
  width: 90%;
  height: 700rpx;
}

.movie-text {
  font-size: 40rpx;
  font-weight: 900;
  color: var(--black);
  line-height: 66rpx;
  padding: 45rpx;
  text-align: center;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 8%;
  width: 100%;
  background: white;
  border-top: 1rpx solid grey;
}

.footer-btn {
  width: 100%;
  height: 100%;
  color: grey;
}
