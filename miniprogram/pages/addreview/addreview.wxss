.review-content {
  margin: 29rpx 27rpx 0;
  padding-bottom: 26rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 10rpx;
}

.review-input {
  width: 100%;
  height: 207rpx;
  padding: 29rpx 34rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 40rpx;
  text-overflow: ellipsis;
}

.review-placeholder {
  color: rgba(29, 29, 38, 0.4);
}

.review-button {
  margin: 34rpx auto;
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: lightgoldenrodyellow;
  border-radius: 10rpx;
  font-size: 30rpx;
  
}

.review-button.disable {
  background:lightgray;
}

.box {
  position: absolute;
  width: 80%;
  height: 80vh;
  background: white;
  margin-top: 15%;
}

.poster {
  height: 36%;
  position: relative;
  top: -8%;
}

.title {
  font-size: 40rpx;
  font-weight: 900;
  text-align: center;
  position: relative;
  top: -20rpx;
}

.content-box {
  display: flex;
  flex-direction: column;
  height: 60%;
  justify-content: center;
}

.detail {
  padding: 60rpx 100rpx;
}

.btn {
  display: flex;
  color: gray;
  justify-content: center;
  width: 100%;
  margin: 30rpx 0;
}


