.me {
  background: white;
  display: flex;
  width: 85%;
  height: 300rpx;
  margin: 15rpx;
  align-items: center;
}

.me-image {
  margin-left: 0;
  width: 30%;
}

.me-moviename {
  font-size: 35rpx;
  font-weight: 900;
  line-height: 56rpx;
}

.me-content {
  margin: 30rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.user-avatar {
  font-variant: small-caps;
  margin: 0;
  padding: 0;
  display: inline-flex;
  text-align: center;
  justify-content: center;
  align-items: center;
  background-color: #ccc;
  color: var(--white);
  white-space: nowrap;
  position: relative;
  width: 50rpx;
  height: 50rpx;
  background-size: cover;
  background-position: center;
  vertical-align: middle;
  font-size: 1.5em;
  border-radius: 5000rpx;
}

.username {
  font-size: 25rpx;
}
