.movie {
  position: relative;
  padding: 30rpx;
  height: 65vh;
  width: 500rpx;
  top: 50rpx;
}

.movie-image {
  height: 80%;
  position: relative;
}

.movie-title {
  font-size: 40rpx;
  font-weight: 900;
  text-align: center;
  position: relative;
  top: 50rpx;
}

.review {
  display: flex;
  position: relative;
  top: 50rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 8%;
  width: 100%;
  background: white;
  border-top: 1rpx solid grey;
}

.footer-btn {
  width: 100%;
  height: 100%;
  color: grey;
}
