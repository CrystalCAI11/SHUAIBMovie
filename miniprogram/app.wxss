@import "icon.wxss";

.flex_column {
  display: flex;
  flex-direction: column;
}

/* 列flex */

.flex_lr {
  display: flex;
  justify-content: space-between;
}

/* 水平两端对齐 */

.flex_pp {
  display: flex;
  justify-content: space-around;
}

/*水平平铺 */

.flex_cm {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 水平垂直居中 */

.bg {
  background-color: #f6f6f6;
  min-height: 100vh;
  display: flex;
  justify-content: center;
}

/* 背景 */

.avatar {
  font-variant: small-caps;
  margin: 0;
  padding: 0;
  display: inline-flex;
  text-align: center;
  justify-content: center;
  align-items: center;
  background-color: #ccc;
  color: var(--white);
  white-space: nowrap;
  position: relative;
  width: 100rpx;
  height: 100rpx;
  background-size: cover;
  background-position: center;
  vertical-align: middle;
  font-size: 1.5em;
  border-radius: 5000rpx;
}

/* 头像 */

.image {
  width: 100%;
  height: 100%;
}

/* 图片 */

.lists {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
}

/* 纵向列表 */

.buttons {
  display: flex;
  color: gray;
  justify-content: space-around;
  position: absolute;
  bottom: 70rpx;
  width: 100%;
  left: 0;
}

.button {
  display: flex;
  margin-bottom: 10%;
  border: 1rpx solid grey;
  padding: 15rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 8%;
  width: 100%;
  background: white;
  border-top: 1rpx solid grey;
}

.footer-btn {
  width: 100%;
  height: 100%;
  color: grey;
}
