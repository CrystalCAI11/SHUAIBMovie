.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 8%;
  width: 100%;
  background: white;
  border-top: 1rpx solid grey;
}

.footer-btn {
  width: 100%;
  height: 100%;
  color: grey;
}

.list {
  background: white;
  display: flex;
  width: 88%;
  height: 220rpx;
  flex-direction: column;
  margin: 15rpx;
  padding: 30rpx;
}

.user {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.content {
  padding: 20rpx;
  color: gray;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.reviewlists {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 92%;
  align-items: center;
  position: fixed;
}
